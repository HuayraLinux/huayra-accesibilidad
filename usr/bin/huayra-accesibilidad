#!/bin/bash

zenity --question --text "Desea habilitar el soporte de accesibilidad ? El entorno de escritorio se reemplazarÃ¡ y se habilitara el lector de pantalla"
if [ $? -eq 0 ]; then
    gsettings set org.gnome.desktop.interface toolkit-accessibility true
    gsettings set org.gnome.desktop.a11y.applications screen-reader-enabled true

    mkdir ~/.local/share/orca
    cp /etc/skel/.local/share/orca/user-settings.conf ~/.local/share/orca/

    if [ ! -f ~/.config/autostart/docky.desktop ] && [ -f /etc/xdg/autostart/docky.desktop ]; then
        cp /etc/xdg/autostart/docky.desktop ~/.config/autostart/
    fi

    if [ ! -f ~/.config/autostart/docky.desktop ]; then
        echo "OnlyShowIn=MATE;" >> ~/.config/autostart/docky.desktop
    fi
    
    sed -i -e 's/Session=.*/Session=huayra-accesible/' ~/.dmrc
	zenity --info --text "Reinicie la computadora para terminar de activar el soporte de accesibilidad"
fi
